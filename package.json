{
  "name": "backend",
  "version": "1.0.0",
  "description": "API playground",
  "main": "index.js",
  "lint-staged": {
    "*.+(js|ts|tsx)": [
      "eslint"
    ],
    "**/*.+(js|json|ts|tsx)": [
      "prettier --write"
    ]
  },
  "scripts": {
    "start": "node index.js",
    "watch": "nodemon index.js",
    "build:dev": "webpack --mode development",
    "start:dev": "node build/bundle.js",
    "dev": "npm run build:dev && npm run start:dev",
    "prepare": "husky install",
    "lint": "eslint --ignore-path .gitignore --ext 'js,jsx,ts,tsx' --fix",
    "lint-staged": "lint-staged",
    "prettier": "prettier --ignore-path .gitignore \"**/*.+(js|json|ts|tsx)\"",
    "format": "npm run prettier -- --write",
    "check-format": "npm run prettier -- --list-different",
    "test": "mocha __test__/**/*.test.js"
  },
  "keywords": [],
  "author": "Saifur Rahman Tanvir",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "chai": "^5.1.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mocha": "^11.0.1",
    "mongoose": "^6.8.4",
    "nodemon": "^2.0.20",
    "supertest": "^7.0.0",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.22.15",
    "@babel/core": "^7.22.20",
    "@babel/eslint-parser": "^7.22.15",
    "@babel/preset-env": "^7.22.20",
    "babel-loader": "^9.1.3",
    "eslint": "^8.50.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-node": "^0.3.9",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "module-alias": "^2.2.3",
    "morgan": "^1.10.0",
    "prettier": "^3.0.3",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-node-externals": "^3.0.0"
  },
  "_moduleAliases": {
    "@models": "models",
    "@views": "views",
    "@controllers": "controllers",
    "@routes": "routes",
    "@utils": "utils",
    "@database": "database"
  }
}

{
  "compilerOptions": {
    "incremental": true,
    "target": "es5",
    "module": "commonjs",
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@models/*": ["models/*"],
      "@views/*": ["views/*"],
      "@controllers/*": ["controllers/*"],
      "@routes/*": ["routes/*"],
      "@utils/*": ["utils/*"]
    },
    "allowJs": true,
    "declaration": false,
    "sourceMap": true,
    "outDir": "build",
    "noEmit": false,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noFallthroughCasesInSwitch": false,
    "skipLibCheck": true
  },
  "include": ["models", "views", "controllers", "routes", "utils", "**/*.js"],
  "exclude": ["node_modules", "build"]
}
